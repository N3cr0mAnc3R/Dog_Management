<div ng-init="init()">
    <div class="login" ng-if="!user">
        <form class="login-box-body">
            <div style=" height:10px"></div>
            <p style="margin-bottom:25px">Войдите для начала работы</p>
            <div class="form-group has-feedback">
                <input type="text" class="form-control" placeholder="Email / Логин" ng-model="username">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Пароль" ng-model="password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-xs-8">
                    </div>
                </div><div class="row">
                    <button class="btn btn-primary btn-block btn-flat container" style="margin:30px auto 0 auto" ng-click="tryLogin(username, password)">Войти</button>
                </div>
            </div>
        </form>
    </div>
</div>